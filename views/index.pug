doctype html
html(lang="es")
    head
      title Upload Files
      meta(charset="utf-8")
    body
      form(action='/api/post-file' method='POST' enctype='multipart/form-data')
        label(for='title') Title:
        input(type='text', name='title', placeholder='Title', id='title')
        br
        br
        label(for='uploadFile') User:
        input(list="users", name="users", placeholder='Choose User',)
        datalist(id="users")
          option(value="Luis")
          option(value="Alex")
        br
        br
        label(for='uploadFile') Upload File:
        input(type='file', name='uploadFile', placeholder='File', id='title')
        br
        br
        input(type='submit', value='Submit')
